# ArcPay SDK Environment Variables
# Copy this file to .env.local and fill in your values

# Gemini API Key for AI features (get from https://aistudio.google.com)
NEXT_PUBLIC_GEMINI_API_KEY=

# Demo wallet private key (TESTNET ONLY - never use mainnet keys!)
# This is used for /api/pay endpoint payments
DEMO_PRIVATE_KEY=

# Arc Testnet Configuration
NEXT_PUBLIC_RPC_URL=https://rpc.testnet.arc.network
NEXT_PUBLIC_CHAIN_ID=5042002
NEXT_PUBLIC_USDC_ADDRESS=0x3600000000000000000000000000000000000000

# Circle API (get from https://console.circle.com)
# Required for: Developer-Controlled Wallets, Gas Station, Bridge
CIRCLE_API_KEY=
CIRCLE_ENTITY_SECRET=

# x402 Micropayments Configuration
NEXT_PUBLIC_MERCHANT_WALLET=
X402_FACILITATOR_URL=https://x402.org

# Explorer URL for transaction links
NEXT_PUBLIC_EXPLORER_URL=https://testnet.arcscan.app
